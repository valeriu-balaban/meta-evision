SUMMARY = "Configuration for openvpn client"
SECTION = "config"

LICENSE = "MIT"
LIC_FILES_CHKSUM = "file://${COMMON_LICENSE_DIR}/MIT;md5=0835ade698e0bcf8506ecda2f7b4f302"

SRC_URI = "file://files/client.conf /
	file://files/easy-rsa/keys/wandboard.crt \
	file://files/easy-rsa/keys/wandboard.key \
	file://files/easy-rsa/keys/ca.crt \
"

S = "${WORKDIR}"

do_install () {

 	install -d ${D}etc/openvpn/easy-rsa
 	install -d ${D}etc/openvpn/easy-rsa/keys

	install -m 0644 wandboard.crt ${D}etc/openvpn/easy-rsa/keys/
	install -m 0644 wandboard.key ${D}etc/openvpn/easy-rsa/keys/
	install -m 0644 ca.crt ${D}etc/openvpn/easy-rsa/keys/
	
	install -m 0644 client.conf ${D}etc/openvpn/
}

